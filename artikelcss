/*screen: dit gebeurt er als de breedte 45em of minder is*/
@media screen and (max-width:45em) {
		html,body {
			width:100%;
			/*zet de pagina horizontaal 'vast'*/
			overflow-x:hidden;
		}
		body{
			margin:0em;
			padding:0em;
		}
		body > * {
			transition:0.5s;
		}
		body.navigatie > *:not(script) {
		/* komt van de linkerkant, Met y vanaf de bovenkant*/
			-webkit-transform:translateX(16em);
			transform:translateX(16em);
		}

		body > header {
		position:relative;
		}

		header>h1 {
			padding-top:2.50em;
			font-size:1.5em;
		}

		main img {
		width: 100%;
		}

		nav ul {
		position:absolute;
		top:0;
		flex-direction:column;
		/*maakt het menu kleiner*/
		width:16em;
		/*het menu schuift naar links zodat hij niet meer zichtbaar hij is 16 breedt en 16 gaat er weg*/
		left:-16em;
	}
}

